<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>

    <div class="container-fluid">
        <div class="row mt-5">
            <form class="col-md-6 offset-md-3 card shadow mt-5" method="post">
                <h2 class="text-center my-5">Update <%= candidate.name %></h2>
                <div class="form-floating mb-3">
                    <input name="name" type="text" class="form-control" id="floatingName" placeholder="Name" value="<%= candidate.name %>">
                    <label for="floatingName">Name</label>
                </div>
                <div class="form-floating">
                    <input name="srcUrl" type="text" class="form-control" id="floatingPhotoUrl"
                        placeholder="Photo Url" value="<%= candidate.srcUrl %>">
                    <label for="floatingPhotoUrl">PhotoUrl</label>
                </div>
                <a type="submit" class="btn btn-primary my-5" href="/<%= canidate.id %>/update">Upload</a>
            </form>
        </div>
    </div>

<%- include('../partials/footer.ejs') %>